<%= render 'shared/page_title', title: @recipe.name %>


<div class="row">
  <div class="col-md-4 pull-right center">
    <%= gravatar_for @recipe.chef, size: 150 %>
    <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
  </div>
  <div class="col-md-8">
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-success pull-rigth" %>
    <h3><%= @recipe.summary %></h3>
    <div class="show_recipe">
      <%= image_tag(@recipe.picture.url, class: "recipe_picture_show") if @recipe.picture? %>
    </div>
    <div class="well">
      <p>
        <strong>Steps:</strong>
      </p>
      <%= simple_format(@recipe.description) %>
      <div class="pull-right">
        <%= link_to "" do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>
        <% end %> &nbsp&nbsp&nbsp&nbsp
        <%= link_to "" do %>
            <i class="glyphicon glyphicon-thumbs-down"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h5><%= link_to "Return to recipes list", recipes_path, class: "btn btn-warning btn-small" %></h5>